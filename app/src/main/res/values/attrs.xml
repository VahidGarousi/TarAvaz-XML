<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="dividerColor" format="color" />
    <declare-styleable name="TarAvazToolbar">
        <attr name="ta_title" format="string" />
        <attr name="ta_shouldShowBackBtn" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TrackView">
        <attr name="tv_rowTitle" format="string" />
        <attr name="tv_viewAllText" format="string" />
        <attr name="tv_viewType" format="reference" />
        <attr name="tv_layoutManager" format="enum">
            <enum name="androidx.recyclerview.widget.LinearLayoutManager" value="0" />
            <enum name="androidx.recyclerview.widget.GridLayoutManager" value="1" />
            <enum name="androidx.recyclerview.widget.StaggeredGridLayoutManager" value="2" />
        </attr>
        <attr name="tv_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="tv_springAnimationTraitStatus" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ArtistsView">
        <attr name="av_rowTitle" format="string" />
        <attr name="av_viewAllText" format="string" />
        <attr name="av_viewType" format="reference" />
        <attr name="av_layoutManager" format="enum">
            <enum name="androidx.recyclerview.widget.LinearLayoutManager" value="0" />
            <enum name="androidx.recyclerview.widget.GridLayoutManager" value="1" />
            <enum name="androidx.recyclerview.widget.StaggeredGridLayoutManager" value="2" />
        </attr>
        <attr name="av_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="av_springAnimationTraitStatus" format="boolean" />
    </declare-styleable>


    <declare-styleable name="AlbumsView">
        <attr name="album_rowTitle" format="string" />
        <attr name="album_viewAllText" format="string" />
        <attr name="album_viewType" format="reference" />
        <attr name="album_layoutManager" format="enum">
            <enum name="androidx.recyclerview.widget.LinearLayoutManager" value="0" />
            <enum name="androidx.recyclerview.widget.GridLayoutManager" value="1" />
            <enum name="androidx.recyclerview.widget.StaggeredGridLayoutManager" value="2" />
        </attr>
        <attr name="album_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="album_springAnimationTraitStatus" format="boolean" />
    </declare-styleable>
</resources>